{
  "name": "grocery-comparator-frontend",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.0.0",                      // Core React library
    "react-dom": "^18.0.0",                  // React DOM for rendering
    "react-scripts": "5.0.0",                // Scripts and configuration for React app
    "axios": "^1.3.0",                      // HTTP client for API calls to backend
    "react-router-dom": "^6.0.0",            // Client-side routing (if needed)
    "react-bootstrap": "^2.5.0",             // Optional: For Bootstrap UI components (useful for styling)
    "react-icons": "^4.5.0"                  // Optional: Icons for UI elements
  },
  "scripts": {
    "start": "react-scripts start",          // Starts the React development server
    "build": "react-scripts build",          // Build the app for production
    "test": "react-scripts test",            // Run tests using React Scripts
    "eject": "react-scripts eject",          // Eject configuration (advanced)
    "lint": "eslint src/**/*.{js,jsx}",      // Run ESLint for code quality (optional)
    "format": "prettier --write src/**/*.{js,jsx,css}" // Format code using Prettier (optional)
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.0.0",                     // Linting tool (for quality checks)
    "prettier": "^2.5.1"                    // Code formatter (for clean code)
  }
}
